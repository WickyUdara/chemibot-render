<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/navBar') %>

    <div class="container mt-5">
        <form action="/order" method="GET">
            <table class="table text-center">
            <thead>
                <tr>
                    <th scope="col" class="text-start">Chemical Name</th>
                    <th scope="col">Row</th>
                    <th scope="col">Column</th>
                    <th scope="col">Availability</th>
                    <th scope="col" class="text-end">Select</th>
                </tr>
            </thead>
            <tbody>
            <!-- ejs -->

            <% for (const chem of model) { %>
                <tr>
                    <td class='text-start'><%= chem.name %></td>
                    <td><%= chem.row %></td>
                    <td><%= chem.col %></td>
                    <td><%= (chem.presence==1) ? "Available" : "Not Available" %></td>
                    <td class='text-end'><input type='checkbox' class="chems"  name="<%= chem.c_id %>" <%= (chem.presence==1) ? "" : "disabled" %>></td>
                </tr>
            <% } %> 

            </tbody>
        </table>
        <input type="submit" class="btn btn-primary" value="Get Chemicals">
    </form>
    <script>
        
        // add onchange="checkChems()"
        function checkChems() {
            const chems = document.querySelectorAll(".chems");
            let count = 0;
            console.log(chems);
            chems.forEach(chem => {
                if (chem.checked) {
                    count++;
                }
            });
            if (count >= 5) {
                chems.forEach(chem => {
                if (!chem.checked) {
                    chem.disabled = true;
                }
            }); 
            }
            else {
                chems.forEach(chem => {
                if (!chem.checked) {
                    chem.disabled = false;
                }
            });
            }
        }
    </script>
</div>
<%- include('partials/footer') %>
  </body>
</html>